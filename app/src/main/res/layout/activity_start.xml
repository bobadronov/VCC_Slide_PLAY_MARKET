<!-- activity_start.xml -->
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:gravity="center"
    android:orientation="vertical"
    android:padding="50dp"
    android:background="@color/prime"
    tools:context=".StartActivity">

    <ImageView
        android:layout_width="225dp"
        android:layout_height="250dp"
        android:layout_marginBottom="10dp"
        android:background="@mipmap/main_logo_big"
        android:contentDescription="@string/app_name" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="10dp"
        android:text="@string/changecity"
        android:textColor="@color/grey"
        android:textSize="30sp"
        android:textStyle="bold" />

    <Button
        android:id="@+id/buttonKyiv"
        android:layout_width="225dp"
        android:layout_height="50dp"
        android:layout_margin="10dp"
        android:textStyle="bold"
        android:textColor="@color/black"
        android:background="@drawable/button_selector"
        android:text="@string/kyiv"
        android:onClick="onKyivButtonClick"
        android:transitionName="buttonTransition"
        />

    <Button
        android:id="@+id/buttonKhmelnytskyi"
        android:layout_width="225dp"
        android:layout_height="50dp"
        android:layout_margin="10dp"
        android:textStyle="bold"
        android:textColor="@color/black"
        android:background="@drawable/button_selector"
        android:text="@string/khmelnytskyi"
        android:onClick="onKhmelnytskyiButtonClick"
        android:transitionName="buttonTransition"
        />

</LinearLayout>
